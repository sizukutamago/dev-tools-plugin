{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/schemas/hooks.json",
  "description": "タスク完了時に条件付きでフィードバックを収集するStop hook設定例（command方式）",
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/dev-tools/prompt-improver/collect_feedback.sh"
          }
        ]
      }
    ]
  }
}
